<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ubication.UbicationFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="394dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tuVehiculoTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tuVehiculoTxt"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:text="@string/tuVehiculo"
            android:textAlignment="textStart"
            android:textAppearance="@style/MLFont"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tuPosicion"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tuPosicion"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/tuPosicion"
            android:textAppearance="@style/MLFont"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tuVehiculo"
            android:layout_width="148dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="40dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tuDirec"
            app:layout_constraintStart_toEndOf="@+id/tuVehiculoTxt" />

        <TextView
            android:id="@+id/tuDirec"
            android:layout_width="147dp"
            android:layout_height="35dp"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tuPosicion" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/vehiculoBoton"
            android:layout_width="74dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="36dp"
            android:text="Maps"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tuPosicionBoton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tuVehiculo" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tuPosicionBoton"
            android:layout_width="72dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:text="Maps"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintStart_toEndOf="@+id/tuDirec" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>