<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="Seleccione"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/advanced_payment"
        android:layout_width="159dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/boton_tati"
        android:drawableTop="@drawable/money"
        android:drawablePadding="10dp"
        android:paddingTop="0dp"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="@string/advanced_payment"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/park_counter"
        android:layout_width="159dp"
        android:layout_height="142dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/boton_tati"
        android:drawableTop="@drawable/clock"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="@string/park_counter"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</android.support.constraint.ConstraintLayout>